<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="390dp"
    android:theme="@android:style/Theme.DeviceDefault.NoActionBar"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="29dp"
        android:background="@android:color/white"
        android:gravity="center"
        >
        
        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Chat Now"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="#3f48cc"
            android:background="@android:color/white"
           />


    </RelativeLayout>
  


        <RelativeLayout
            android:layout_width="390dp"
            android:layout_height="90dp"
        android:background="#3f48cc"
        android:layout_marginTop="30dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/status">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/bio"
                    android:layout_marginLeft="5dp"
                  />
                
                

            </LinearLayout>


        </HorizontalScrollView>


        </RelativeLayout>





    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="35dp"
        android:background="@android:color/white"
        android:layout_marginTop="120dp"
        android:minWidth="25px"
        android:minHeight="25px"
       >
        <Button
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/chat_menu"
            android:id="@+id/button2" />

        <EditText
            android:layout_width="270dp"
            android:layout_height="35dp"
            android:layout_marginLeft="70dp"
            android:textColor="@android:color/black"
            android:background="@android:color/white"
           />
        <Button
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:background="@drawable/search"
            android:layout_marginLeft="340dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="750dp"
        android:background="@android:color/white"
        android:layout_marginTop="155dp"
        android:layout_marginLeft="0.0dp"
        >

        <RelativeLayout
            android:layout_width="390dp"
            android:layout_height="58dp"
            android:id="@+id/menu"
            android:background="@drawable/chat"
            >

            <Button
                android:layout_width="100dp"
                android:layout_height="58dp"
                android:background="@android:color/transparent"
                android:text="chat"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginLeft="13dp"
                android:id="@+id/chat"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="58dp"
                android:background="@android:color/transparent"
                android:text="group"
                android:textColor="#3f48cc"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginLeft="150dp"
                android:id="@+id/group"/>
            <Button
                android:layout_width="108dp"
                android:layout_height="58dp"
                android:background="@android:color/transparent"
                android:text="personal"
                android:textColor="#3f48cc"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="280dp"
                android:id="@+id/personal"/>





        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:visibility="visible"
            android:fillViewport="true"
            android:id="@+id/c_layout"
           >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3f48cc"
                android:id="@+id/chat_layout"
                android:orientation="vertical"
            >


            </LinearLayout>
        </ScrollView>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:visibility="visible"
            android:fillViewport="true"
            android:id="@+id/g_layout"
      >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3f48cc"
                android:id="@+id/group_layout"
                android:orientation="vertical"
            >


            </LinearLayout>
        </ScrollView>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:visibility="visible"
            android:fillViewport="true"
            android:id="@+id/p_layout"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3f48cc"
                android:id="@+id/personal_layout"
                android:orientation="vertical"
            >


            </LinearLayout>
        </ScrollView>



    </RelativeLayout>






    <Button
        android:layout_width="51.7dp"
        android:layout_height="26dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dp"
        android:background="#c3c3c3"
        android:id="@+id/enter"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="600dp"
        android:background="@drawable/cadd"
        android:id="@+id/add"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"           
        android:layout_marginTop="700dp" 
        android:layout_marginLeft="3dp"
        android:background="@drawable/All_menu"
        android:id="@+id/All_menu"
          />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="63dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="705.6dp"
        android:layout_marginLeft="80dp"
        android:orientation="horizontal"
       
        android:id="@+id/All_menu_layout"
        android:visibility="invisible">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/Chat_logo"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:gravity="center"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/music_logo"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="6dp"
            android:id="@+id/music"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/reels_logo"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="6dp"
            android:id="@+id/bat"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/profile_logo"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="6dp"/>

    </LinearLayout>

</RelativeLayout>