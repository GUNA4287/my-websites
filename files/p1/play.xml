 <?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="390dp"
    android:theme="@android:style/Theme.DeviceDefault.NoActionBar"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/white">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/library_back"
            
            android:id="@id/back"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="New song "
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="38dp"/>
        </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@android:color/white"
        android:layout_marginTop="80dp">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/n1"
            android:id="@+id/songImage"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="45dp"
            />
           
         

        

        </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/white"
        android:layout_marginTop="430dp">

        <TextView
             android:layout_width="250dp"
             android:layout_height="50dp"
           
            android:text="kutti pisaase"
            android:padding="5dp"
            android:id="@+id/songname"
            android:textSize="29dp"
            android:layout_marginLeft="15dp"
           android:textColor="@android:color/black"
           android:textStyle="bold"/>

        <TextView
             android:layout_width="350dp"
             android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:text="G.v prokshakumar ,valily"
            android:textSize="22dp"
            android:padding="10dp"
            android:id="@+id/authorname"
            android:textColor="@android:color/black"
           android:textStyle="bold"
            />

       </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@android:color/white"
        android:layout_marginTop="570dp">

         <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/backword1"
              android:id="@+id/backword"
            />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="165dp"
            android:text="pause"
            android:textStyle="bold"
            android:background="@drawable/play"
            android:id="@+id/pause"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="310dp"
            android:background="@drawable/forwoard1"
            android:id="@+id/forword"/>

        </RelativeLayout>


        

</RelativeLayout>            