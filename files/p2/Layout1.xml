<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:id="@+id/relativeLayout1"
   
    >

    <Button
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginLeft="11dp"
        android:background="@drawable/taskmenu"
        android:text="personal"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@android:color/white"
        android:layout_marginTop="3dp"
        android:id="@+id/personalButton"
      />
    <Button
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:layout_marginLeft="144dp"
            android:background="@drawable/taskmenu"
            android:text="work"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginTop="3dp"
            android:id="@+id/workButton"
        />

    <Button
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:layout_marginLeft="275dp"
            android:background="@drawable/taskmenu"
            android:text="Health"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginTop="3dp"
            android:id="@+id/healthButton"
        
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:visibility="visible"
        android:fillViewport="true"
        android:id="@+id/personal_layout"
      >
       

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_dark"
            android:id="@+id/personal"
         
            android:orientation="vertical"
           
            >
             
            
        </LinearLayout>
    </ScrollView>


     <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:visibility="invisible"
        android:fillViewport="true"
        android:id="@+id/work_layout"
        
      >
       

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_dark"
            android:id="@+id/work"
            
            android:orientation="vertical"
           
            >
             
            
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:visibility="visible"
        android:fillViewport="true"
        android:id="@+id/health_layout"
        
      >
       

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_dark"
            android:id="@+id/health"
            
            android:orientation="vertical"
           
            >
             
            
        </LinearLayout>
    </ScrollView>
     





    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/hh"
        android:layout_marginTop="670dp"
        android:layout_marginLeft="130dp"
        android:id="@+id/cal"
        android:rotation="120"
    />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/hh"
        android:layout_marginTop="710dp"
        android:layout_marginLeft="160dp"
        android:id="@+id/task"    
    />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/hh"
        android:layout_marginTop="670dp"
        android:layout_marginLeft="180dp"
        android:id="@+id/pro"
        android:rotation="-120"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/main_menu"
        android:layout_marginTop="650dp"
        android:layout_marginLeft="135dp"
        android:id="@+id/menu"
        android:layout_marginRight="1.7dp" 
        
        />
    <Button
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:layout_marginTop="500dp"
          android:layout_marginLeft="300dp"
          android:background="@drawable/add"
        android:id="@+id/add1"/>



    <Button
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginLeft="168dp"
        android:background="@drawable/taskmenu"
        android:text="x"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="@android:color/holo_red_light"
        android:layout_marginTop="330dp"
        android:textAlignment="center"
        android:id="@+id/value_layout_close"
        android:visibility="invisible"
        
      />

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="20dp"
        android:background="@android:color/holo_blue_light"
        android:id="@+id/value_layout"
        android:visibility="invisible"
      >
        <EditText
            android:layout_width="295dp"
            android:layout_height="50dp"
            android:id="@+id/editText1"   
            android:textSize="35dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:hint="Task Tittle"
            android:textColorHint="@android:color/white"
            android:background="@android:color/holo_blue_bright"/>
        <Button
            android:layout_width="44dp"
            android:layout_height="50dp"
            android:layout_marginLeft="295dp"
            
            
            android:id="@+id/enter"
            android:textSize="40dp"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="413dp"
        android:layout_height="820.0dp"
        android:background="@drawable/completed"
        android:id="@+id/completed"
        android:visibility="invisible"
      />
     <RelativeLayout
        android:layout_width="413dp"
        android:layout_height="820.0dp"
        android:layout_marginTop="-509dp"
        android:background="@drawable/completed"
        android:id="@+id/completed2"
        android:visibility="visible"
      
      />

    


</RelativeLayout>